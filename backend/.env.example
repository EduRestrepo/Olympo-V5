# Database Configuration
# Format: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://olympus:olympus_secret@db:5432/olympus_db

# Application Environment
APP_ENV=dev
APP_DEBUG=true

# Azure AD & Microsoft Graph
MS_GRAPH_CLIENT_ID=
MS_GRAPH_CLIENT_SECRET=
MS_GRAPH_TENANT_ID=

# Ingestion Filters
# Options: TEST (only TEST_TARGET_USERS) | FULL (all users)
INGESTION_MODE=TEST

# Comma separated emails for TEST mode
TEST_TARGET_USERS=eduardo.restrepo@perezllorca.com;david.pardo@perezllorca.com

# Comma separated emails to ALWAYS exclude (admin accounts, etc)
EXCLUDED_USERS=

# Unified Influence Scoring Weights (must sum to 1.0)
# Adjust based on your organization's communication culture
INFLUENCE_WEIGHT_EMAIL=0.6
INFLUENCE_WEIGHT_TEAMS=0.4

# Data Collection Period (in days)
# Minimum recommended: 15 days for meaningful analysis
# Default: 15 days for comprehensive insights
EMAIL_LOOKBACK_DAYS=15
TEAMS_LOOKBACK_DAYS=15
